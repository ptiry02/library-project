<form action='/books/create' method='POST'>
  <label>Title:
    <input type='text' name='title' />
  </label>
  <label>Author:
    <input type='text' name='author' />
  </label>
  <label>Rating:
    <input type='number' name='rating' />
  </label>
  <label>Description:
    <textarea cols='30' rows='4' name='description'></textarea>
  </label>
  <button type='submit'>Submit</button>
</form>